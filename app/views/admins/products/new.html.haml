%h2.center
  新規商品の追加
.container
  -# admins_products_pathにリクエストを送信
  = simple_form_for [:admins, @product] do |f|
    = f.input :name
    = f.input :description
    = f.input :price
    = f.input :unit
    = f.input :image, as: :file, input_html: {accept: (@product.image.accept_extensions)}
    .mt-20
      = f.button :submit